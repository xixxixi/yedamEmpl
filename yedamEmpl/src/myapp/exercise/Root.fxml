<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="300.0" prefWidth="500.0"
	xmlns="http://javafx.com/javafx/15.0.1"
	xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<TableView fx:id="table" prefHeight="200.0"
			prefWidth="200.0" BorderPane.alignment="CENTER">
			<columns>
				<TableColumn fx:id="name" prefWidth="120.0" text="이름" />
				<TableColumn fx:id="ko" prefWidth="120.0" text="국어" />
				<TableColumn fx:id="math" prefWidth="120.0" text="수학" />
				<TableColumn fx:id="eng" prefWidth="120.0" text="영어" />
			</columns>
		</TableView>
	</center>
	<bottom>
		<HBox prefHeight="100.0" prefWidth="200.0"
			BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="addBtn" alignment="CENTER"
					contentDisplay="CENTER" mnemonicParsing="false"
					onAction="#addBtnAction" text="추가" textAlignment="CENTER"
					translateX="220.0" translateY="25.5" />
			</children>
		</HBox>
	</bottom>
</BorderPane>
